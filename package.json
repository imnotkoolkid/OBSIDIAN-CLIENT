{
  "name": "obsidian-client",
  "version": "1.0.0",
  "description": "Obsidian Client for Kirka.io",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "imnotkoolkid",
  "license": "MIT",
  "dependencies": {
    "discord-rpc": "^4.0.1"
  },
  "devDependencies": {
    "electron": "^10.4.7",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.imnotkoolkid.obsidianclient",
    "productName": "Obsidian Client",
    "win": {
      "target": "nsis",
      "icon": "assets/Obsidian Client.ico",
      "artifactName": "${productName}-setup-win-${arch}-${version}.${ext}"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/Obsidian Client.icns",
      "artifactName": "${productName}-setup-mac-${version}.${ext}"
    },
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "imnotkoolkid",
      "repo": "obsidian-client",
      "releaseType": "draft"
    }
  }
}
